{
    "name": "smart-sweeper",
    "productName": "SmartSweeper",
    "version": "0.1.1",
    "description": "Sweeper application for SmartCash cryptocurrency to allow easy retrieval of gift funds.",
    "homepage": "https://swiftlettech.github.io/smart-sweeper-website/",
    "author": "Swiftlet Technology, LLC",
    "keywords": [],
    "license": "GPL-3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/swiftlettech/smart-sweeper.git"
    },
    "bugs": "https://github.com/swiftlettech/smart-sweeper/issues",
    "scripts": {
        "start": "electron .",
        "build": "node packager.js",
        "pack": "electron-builder --dir",
        "dist": "electron-builder build -w"
    },
    "build": {
		"files": [
			"**/*",
			"config/*"
		],
        "appId": "smart-sweeper.app",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "win": {
            "target": "NSIS"
        }
    },
    "dependencies": {
        "bitcoin": "^3.0.1",
        "devtron": "^1.4.0",
        "electron-debug": "^1.5.0",
        "electron-is-dev": "^0.3.0",
        "electron-store": "^1.3.0",
        "electron-util": "^0.6.0",
        "elemon": "^5.0.3",
        "exp-config": "^2.0.1",
        "is-online": "^7.0.0",
        "melanke-watchjs": "^1.4.3",
        "node-smartcash": "^1.1.1",
        "ps-node": "^0.1.6",
        "request": "^2.87.0",
        "smartcashjs-lib": "^3.3.4",
        "winston": "^3.0.0"
    },
    "devDependencies": {
        "electron": "^1.8.7",
        "electron-builder": "^20.11.1",
        "electron-packager": "^12.1.0"
    }
}
